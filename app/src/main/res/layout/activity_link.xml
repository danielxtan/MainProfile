<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinkActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="366dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_main"
                android:elevation="10dp" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/tittle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:text="Useful Links"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/main"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tittle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-light"
            android:text="Accommodation"
            android:textColor="@color/main"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bookingbtn"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_bg"
            android:drawableRight="@drawable/next_main"
            android:elevation="20dp"
            android:shadowRadius="100"
            android:text="Booking.com"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/agodabtn"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:background="@drawable/btn_bg"
            android:elevation="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:drawableRight="@drawable/next_main"
            android:text="Agoda.com" />

        <Button
            android:id="@+id/airbnbbtn"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:background="@drawable/btn_bg"
            android:elevation="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:drawableRight="@drawable/next_main"
            android:text="Airbnb" />

        <TextView
            android:id="@+id/tittle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-light"
            android:text="Transportation"
            android:textColor="@color/main"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/grabbtn"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_bg"
            android:elevation="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:drawableRight="@drawable/next_main"
            android:text="Grab" />


        <Button
            android:id="@+id/rapidklbtn"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_bg"
            android:drawableRight="@drawable/next_main"
            android:elevation="20dp"
            android:text="Rapid KL"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/moovitbtn"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_bg"
            android:drawableRight="@drawable/next_main"
            android:elevation="20dp"
            android:text="Moovit"
            android:textAllCaps="false"
            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>